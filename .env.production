# Human Paris Modeling Agency CMS - Production Environment
# This file should be copied to .env and values updated for production

NODE_ENV=production

# App Configuration
HOST=0.0.0.0
PORT=1337
PUBLIC_URL=https://your-strapi-app.strapiapp.com
FRONTEND_URL=https://humanparis.com

# Authentication & Security
APP_KEYS="your-app-key-1,your-app-key-2,your-app-key-3,your-app-key-4"
API_TOKEN_SALT=your-api-token-salt
ADMIN_JWT_SECRET=your-admin-jwt-secret
TRANSFER_TOKEN_SALT=your-transfer-token-salt
JWT_SECRET=your-jwt-secret
ENCRYPTION_KEY=your-encryption-key

# Database Configuration (auto-configured by Strapi Cloud)
DATABASE_CLIENT=postgres
DATABASE_URL=postgresql://username:password@host:port/database
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# Upload & Media Configuration
UPLOAD_PROVIDER=strapi-provider-upload-strapi-cloud
STRAPI_UPLOAD_PROVIDER=strapi-cloud

# Admin Panel Configuration
ADMIN_URL=/admin
SERVE_ADMIN=true
RATE_LIMIT_MAX=50
RATE_LIMIT_DURATION=60000

# Performance & Logging
LOG_LEVEL=info
LOG_REQUESTS=false
CRON_ENABLED=true
SERVE_STATIC=true
DATABASE_DEBUG=false

# Security Headers
WEBHOOKS_POPULATE_RELATIONS=false
IS_PROXIED=true
SOCKET_ENABLED=false

# Request Configuration
REQUEST_TIMEOUT=300000

# Optional: External Services
# CLOUDFLARE_ZONE_ID=your-cloudflare-zone
# CLOUDFLARE_API_TOKEN=your-cloudflare-token
# SENDGRID_API_KEY=your-sendgrid-key
# GOOGLE_ANALYTICS_ID=your-ga-id

# Development overrides (remove in production)
# DATABASE_FORCE_MIGRATION=false
# DATABASE_MIGRATIONS=true