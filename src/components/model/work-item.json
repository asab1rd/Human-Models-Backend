{
  "collectionName": "components_model_work_items",
  "info": {
    "displayName": "Work Item",
    "description": "Individual work experience entry"
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "client": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["editorial", "campaign", "runway", "commercial", "e-commerce"],
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "videos"]
    }
  }
}