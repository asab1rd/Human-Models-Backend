{
  "kind": "singleType",
  "collectionName": "homepages",
  "info": {
    "singularName": "homepage",
    "pluralName": "homepages",
    "displayName": "Homepage",
    "description": "Dynamic homepage with modular sections"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "required": true
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "sections.hero",
        "sections.model-grid",
        "sections.featured-models",
        "sections.latest-editorial",
        "sections.board-showcase",
        "sections.text-content",
        "sections.gallery",
        "sections.contact-cta"
      ],
      "required": true,
      "min": 1
    }
  }
}